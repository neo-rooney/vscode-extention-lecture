{
  "name": "step2-3-react",
  "displayName": "step2-3-react",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "step2WebviewContainer",
          "title": "Step2 React Webview",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "step2WebviewContainer": [
        {
          "icon": "$(comment-discussion)",
          "type": "webview",
          "id": "step2WebviewView",
          "name": "React Hello World",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build-webview": "cd ui && npm run build",
    "dev-webview": "cd ui && npm run dev",
    "install-webview": "cd ui && npm install"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
